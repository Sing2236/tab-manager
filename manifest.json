{
    "manifest_version": 3,
    "name": "Tab Manager - Time Sensitivity",
    "version": "1.0",
    "description": "Categorize and manage tabs based on time sensitivity.",
    "permissions": ["tabs", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
